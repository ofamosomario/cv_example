<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table style="border: 1px solid">
  <thead>
    <tr style="border: 1px solid">
      <th>Name</th>
      <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr style="border: 1px solid">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td style="border-left: 1px solid black"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td style="border-left: 1px solid black"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

